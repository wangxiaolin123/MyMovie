            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-primary">登录</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Areas/T3/common/MovieJavaScript.js"></script>
<script>
     $("button").click(function () {
            var a = $("#text").val();
            var b = $("#text1").val();
            if (a == "123456") {
                if (b == null)
                {
                    ShowMessage("名字不能为空！请输入！");
                }
                else {
                    location.href = "/T3/MovieTables/Add";
                }
            }
            else {
                ShowMessage("密码错误！请重新输入！");
            }
      })
</script>

